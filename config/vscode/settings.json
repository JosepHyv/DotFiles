{
  //editor settings
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.minimap.autohide": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.autoClosingBrackets": "always",
  "editor.foldingImportsByDefault": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  //window and workflow settings
  "files.autoSave": "afterDelay",
  "explorer.confirmDelete": false,
  "vscode-blur-linux.opacity": 95,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "workbench.colorTheme": "Monokai",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.iconTheme": "material-icon-theme",
  "window.zoomLevel": 0,
  "window.commandCenter": true,
  "window.menuBarVisibility": "toggle",
  "git.openRepositoryInParentFolders": "always",

  ///javascript and web settings
  "eslint.probe": [
    "vue",
    "html",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "auto-close-tag.activationOnLanguage": [
    "ejs",
    "erb",
    "php",
    "vue",
    "xml",
    "cfml",
    "blade",
    "jinja",
    "plist",
    "liquid",
    "lang-cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "javascriptreact",
    "typescriptreact"
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "files.autoSave": "off",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "files.autoSave": "off",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  ///other languages settings
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "ruff.importStrategy": "fromEnvironment",
  "ruff.enable": true,
  "ruff.path": ["/home/josephy/.local/bin/ruff"],
  "python.defaultInterpreterPath": "/usr/bin/python",

  // "[python]": {
  //   "editor.defaultFormatter": "ms-python.black-formatter"
  // },
  // "black-formatter.importStrategy": "useBundled",
  // "black-formatter.path": ["/home/joseph/.local/bin/black"],

  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go"
  },
  "extensions.ignoreRecommendations": true
}
